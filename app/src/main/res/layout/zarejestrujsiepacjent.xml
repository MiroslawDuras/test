<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/startimg"
    tools:context=".zarejestrujsiepacjent">

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="356dp"
        android:layout_height="155dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="577dp"
        android:text="Wpisz swoje dane aby się zarejestrować."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.527" />

    <Button
        android:id="@+id/zalogujsiebutton2"
        android:layout_width="277dp"
        android:layout_height="76dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="558dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="97dp"
        android:background="#A3FFFFFF"
        android:text="Zarejestruj się"
        android:textColor="#000000"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="283dp"
        android:layout_height="74dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="449dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="306dp"
        android:background="#A3BB86FC"
        android:ems="10"
        android:hint="Wpisz tutaj swój adres email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="283dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="317dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="340dp"
        android:background="#A3BB86FC"
        android:ems="10"
        android:hint="Wpisz tutaj swoje nazwisko"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="283dp"
        android:layout_height="74dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="281dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="474dp"
        android:background="#A3BB86FC"
        android:ems="10"
        android:hint="Wpisz tutaj swoje imię"
        android:inputType="text"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="282dp"
        android:layout_height="67dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="532dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="230dp"
        android:background="#A4BB86FC"
        android:ems="10"
        android:hint="Wpisz tutaj swoje hasło"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cofnij6"
        android:layout_width="101dp"
        android:layout_height="65dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="641dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="25dp"
        android:background="#A3FFFFFF"
        android:text="cofnij"
        android:textColor="#000000"
        android:textSize="15dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>